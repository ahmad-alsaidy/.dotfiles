#!/bin/bash

DMENU="dmenu -i"
# DMENU="rofi -dmenu -i"

options="logout\nsuspend\nlockscreen\npoweroff\nreboot"
chosen=$(echo -e "$options" | ${DMENU} -p "Power Menu")

case "$chosen" in
  logout) kill -9 -1 ;;
  lockscreen) i3lock --color 282828 ;;
  suspend) systemctl suspend ;;
  poweroff) systemctl poweroff ;;
  reboot) systemctl reboot ;;
esac
