// wifi
order += "wireless wlp0s20f3"
wireless wlp0s20f3 {
    format_up = "WiFi: %essid%quality"
    format_down = "WiFi: Disconnected"
}

// volume
order += "volume master"
volume master {
    format = "â™ª: %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

// battery
order += "battery all"
battery all {
    format = "BAT: %percentage"
    last_full_capacity = true
    threshold_type = "percentage"
    low_threshold = 10
}

// memory
order += "memory"
memory {
    format = "RAM: %used"
}

// cpu
order += "cpu_usage"
cpu_usage {
    format = "CPU: %usage"
}

// time
order += "tztime local"
tztime local {
    format = "%I:%M %p"
    timezone = "Africa/Cairo"
}
